{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    "fs:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [],
          "name": "binaries/holocure-buddy-config-builder",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [
        {
          "path": "**/save_n.dat"
        },
        {
          "path": "$LOCALDATA/**/save_n.dat"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "**/*"
        },
        {
          "path": "$LOCALDATA/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$LOCALDATA/holocure-buddy/config.json"
        }
      ]
    }
  ]
}
